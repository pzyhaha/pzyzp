//指针和数组
#include<iostream>
using namespace std;
int main()
{
	int arr[] = { 1,2,3,4,5,6,7,8,9 };
	int* p = arr;
	cout << "第一个元素为：" << arr[0] << endl;
	cout << "利用指针访问第一个元素：" << *p << endl;
	p++;
	cout << "利用指针访问第二个元素：" << *p<< endl;
	cout << "利用指针遍历数组" << endl;
	int* p2 = arr;
	for (int i=0;i<10;i++)
	{
		
		cout << *p2 << endl;
		p2++;
		//cout << arr[i] << endl;
	}
		system("pause");
		return 0;
}
